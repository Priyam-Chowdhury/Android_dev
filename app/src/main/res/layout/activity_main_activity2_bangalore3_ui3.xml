<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2_bangalore3_ui3">


    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:backgroundTint="#333645"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView137"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/texture_6" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="628dp"
        android:background="#FCFD95"
        android:backgroundTint="#FCFD95"
        android:translationY="100dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="102dp">

        <Button
            android:id="@+id/button145"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Tour Description"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="395dp"
            android:layout_height="136dp"
            android:text="It's incredible to see your enthusiasm as we continue to explore the diverse and captivating facets of this city. With each passing day, you're getting to know Bangalore more intimately, and today is no exception.  Today's itinerary is all about indulging in the finer aspects of Bangalore's culture, heritage, and natural beauty. From serene gardens to historic sites, we've curated a day that promises to leave you awestruck and inspired.  "
            android:translationX="6dp"
            android:translationY="50dp" />

        <Button
            android:id="@+id/button146"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Tour Itinerary"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp"
            android:translationY="185dp" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="395dp"
            android:layout_height="120dp"
            android:text="K.R.Marukatte\nLal Bagh\nUB CITY\nOrion Mall\nPhoenix Market City\nCommercial Street"
            android:translationX="6dp"
            android:translationY="235dp" />

        <Button
            android:id="@+id/button147"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Photos"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp"
            android:translationY="350dp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="55dp"
            android:translationX="10dp"
            android:translationY="420dp"
            app:columnCount="3"
            app:rowCount="5">

            <ImageButton
                android:id="@+id/imageButton120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/kr_market__1_" />

            <ImageButton
                android:id="@+id/imageButton121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/lalbagh" />

            <ImageButton
                android:id="@+id/imageButton122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="2"
                app:layout_row="0"
                app:srcCompat="@drawable/ub_city_mall_featured_image__1___1_" />

            <ImageButton
                android:id="@+id/imageButton123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/orion_mall" />

            <ImageButton
                android:id="@+id/imageButton124"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/phoenix_marketcity_blr_1__1_" />

            <ImageButton
                android:id="@+id/imageButton125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="2"
                app:layout_row="1"
                app:srcCompat="@drawable/commercial_street" />
        </androidx.gridlayout.widget.GridLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>