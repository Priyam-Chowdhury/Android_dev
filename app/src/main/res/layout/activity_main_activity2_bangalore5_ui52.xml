    android:layout_height="match_parent"
    tools:context=".MainActivity2_bangalore5_ui5_2">

    <ImageView
        android:id="@+id/imageView85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bangalore_mysore_maharaja_palace_new" />

    <FrameLayout
        android:layout_width="407dp"
        android:layout_height="577dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="151dp">

        <Button
            android:id="@+id/button273"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/textView118"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="The Bangalore Palace is a prominent historical and architectural landmark located in the heart of Bangalore, Karnataka, India. It stands as a testament to the city's rich history and the influence of various architectural styles."
            android:translationX="6dp"
            android:translationY="200dp" />

        <Button
            android:id="@+id/button274"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Review"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp"
            android:translationY="275dp" />

        <RatingBar
            android:id="@+id/ratingBar59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="6dp"
            android:translationY="325dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
