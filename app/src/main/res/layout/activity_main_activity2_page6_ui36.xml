<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2_page6_ui3_6">

    <ImageView
        android:id="@+id/imageView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/glenburn_new" />

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="579dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="151dp">

        <Button
            android:id="@+id/button195"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/textView79"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="Located in Kolkata, a 8-minute walk from Park Street Metro Station, The Glenburn Penthouse has accommodations with an outdoor swimming pool, free private parking, a fitness center and a garden. This 2-star hotel offers a 24-hour front desk and an ATM. The property provides a concierge service, a tour desk and currency exchange for guests."
            android:translationX="6dp"
            android:translationY="200dp" />

        <Button
            android:id="@+id/button196"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#333645"
            android:text="Review"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="6dp"
            android:translationY="310dp" />

        <RatingBar
            android:id="@+id/ratingBar20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="6dp"
            android:translationY="360dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>