                android:layout_height="wrap_content"
                android:backgroundTint="#333645"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationX="6dp"
                android:translationY="150dp" />

            <TextView
                android:id="@+id/textView112"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="The ISKCON (International Society for Krishna Consciousness) Temple in Bangalore, also known as the Sri Radha Krishna Chandra Temple, is a prominent spiritual and cultural landmark in the city of Bangalore (Bengaluru), Karnataka, India. It is one of the largest ISKCON temples in the world and holds great significance for devotees of Lord Krishna."
                android:translationX="6dp"
                android:translationY="200dp" />

            <Button
                android:id="@+id/button262"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#333645"
                android:text="Review"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationX="6dp"
                android:translationY="325dp" />

            <RatingBar
                android:id="@+id/ratingBar53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="6dp"
                android:translationY="375dp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
